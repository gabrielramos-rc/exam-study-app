# Database
DATABASE_URL=postgresql://study:study@localhost:5432/study

# App
NODE_ENV=development
PORT=3000
UPLOAD_MAX_SIZE=52428800

# ArgoCD (populated by setup-helm.sh)
ARGOCD_URL=https://localhost:8080
ARGOCD_USERNAME=admin
ARGOCD_PASSWORD=<run ./scripts/setup-helm.sh to get password>

# Kubernetes Dashboard
K8S_DASHBOARD_URL=https://localhost:8443
K8S_DASHBOARD_TOKEN=<run ./scripts/setup-helm.sh to get token>

# Grafana
GRAFANA_URL=http://localhost:3001
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=<run: kubectl get secret prometheus-grafana -n monitoring -o jsonpath='{.data.admin-password}' | base64 -d>

# pgAdmin
PGADMIN_URL=http://localhost:5050
PGADMIN_EMAIL=gabriel.ramos@rcconsultech.com
PGADMIN_PASSWORD=<run: kubectl get secret pgadmin-pgadmin4 -n pgadmin -o jsonpath='{.data.password}' | base64 -d>
